<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.raycai.fluffie.ui.splash.SplashViewModel" />

        <variable
            name="fragment"
            type="com.raycai.fluffie.ui.splash.SplashFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pink_bg"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/ivLogoWhite"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_logo_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.40" />

        <TextView
            android:id="@+id/tv1"
            style="@style/TextView.Normal.White"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="@string/txt_1"
            app:layout_constraintEnd_toEndOf="@+id/ivLogoWhite"
            app:layout_constraintStart_toStartOf="@+id/ivLogoWhite"
            app:layout_constraintTop_toBottomOf="@+id/ivLogoWhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv2"
                style="@style/TextView.Normal.White"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="9,595"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv3"
                style="@style/TextView.Normal.White"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="Product summaries" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv4"
                        style="@style/TextView.Normal.White"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp"
                        android:text="100,000"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv5"
                        style="@style/TextView.Normal.White"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp"
                        android:text="Reviews analysed"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv6"
                        style="@style/TextView.Normal.White"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp"
                        android:text="54,000"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv7"
                        style="@style/TextView.Normal.White"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp"
                        android:text="Reviews posted"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


