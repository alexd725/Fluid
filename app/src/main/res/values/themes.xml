<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fluffie" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rose</item>
        <item name="colorPrimaryVariant">@color/white_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rose</item>
        <item name="colorSecondaryVariant">@color/white_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar</item>
    </style>


    <style name="Theme.Fluffie.DARK" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rose</item>
        <item name="colorPrimaryVariant">@color/white_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rose</item>
        <item name="colorSecondaryVariant">@color/white_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar</item>
    </style>

    <style name="CustomTooltipTextAppearance" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextView.Normal.White" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="BlackTab.Small" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BlackTab.Medium" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextView.Normal.Gray" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="colorPrimary">@color/rose</item>
        <item name="colorPrimaryVariant">@color/white_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/rose</item>
        <item name="colorSecondaryVariant">@color/white_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/status_bar</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>